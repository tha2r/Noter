<div class="row">
  <div class="col-md-6 col-md-offset-3" align="center">
       <div class="panel panel-default">
              <!-- Default panel contents -->
              <div class="panel-heading">
                     Contact Us
              </div>

              <div class="panel-body" align="center">

                             <form action="/user/contact" method="post">

                                <div class="form-group">
                                                <div class="input-group">
                                                  <span class="input-group-addon">Your name</span>
                                                  <input class="form-control" placeholder="Name" name="name" type="name" autofocus>
                                                </div>

                                </div>

                                <div class="form-group">
                                                <div class="input-group">
                                                  <span class="input-group-addon">Your EMail</span>
                                                  <input class="form-control" placeholder="E-mail" name="email" type="email">
                                                </div>

                                </div>

                                <div class="form-group">
                                                  <span class="input-group-addon">The message</span>
                                                  <textarea name="message" rows="6" cols="70" placeholder="Message"></textarea>


                                </div>

                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Contact us">
                              </form>
              </div>
       </div>
  </div>
</div>